<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.annie.glam">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Glam">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Glam.Login" />
        <activity
            android:name=".SigninScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Glam.Signin" />
        <activity
            android:name=".ExploreScreen"
            android:label="@string/title_activity_explore"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ProductDetailScreen"
                  android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>